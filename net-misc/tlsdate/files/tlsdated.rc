description="start a daemon to continuously set time via a helper"

command="tlsdated"
command_args="${TLSDATED_OPTS} -- ${TLSDATED_CMD}"
command_background="true"
pidfile="/var/run/${SVCNAME}.pid"

depend() {
	use net
}

start_pre() {
	checkpath -d -m 0700 "${TLSDATED_CACHE_DIR}"
}
