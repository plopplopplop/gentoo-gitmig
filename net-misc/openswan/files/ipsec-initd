depend() {
	need net logger
	after dns
}

start() {
	ebegin "Starting IPSec"
	ipsec setup --start
	eend $?
}

stop() {
	ebegin "Stopping IPSec"
	ipsec setup --stop
	eend $?
}

status() {
	if [ "$RC_QUIET" != "yes" ]; then
		ipsec setup --status
	fi
}
