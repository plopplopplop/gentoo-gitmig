depend() {
	use net
}
start() {
	ebegin "Starting lldpd"
	start-stop-daemon --start --exec /usr/sbin/lldpd \
	    --pidfile /var/run/lldpd.pid \
	    -- ${LLDPD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping lldpd"
	start-stop-daemon --stop --exec /usr/sbin/lldpd \
	    --pidfile /var/run/lldpd.pid
	eend $?
}
