command="smtpd"
start_stop_daemon_args="--pidfile=/var/run/smtpd.pid"
description="SMTP daemon from OpenBSD"

depend() {
	need net
}
stop() {
	ebegin "Stopping smtpd"
	smtpctl stop
	eend $?
}
