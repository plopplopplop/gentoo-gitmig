depend() {
	need net
}

start() {
	ebegin "Starting TetriNET Server"
	/usr/games/bin/tetrix -q
	eend $?
}

stop() {
	ebegin "Stopping TetriNET Server"
	[ -e /var/run/tetrix.pid ] && kill $(</var/run/tetrix.pid)
	eend $? "Could not kill tetrix server :("
}
