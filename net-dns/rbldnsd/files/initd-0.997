depend() {
    need net
}

start() {
    ebegin "Starting rbldnsd"

    start-stop-daemon --start --quiet --pidfile /run/rbldnsd.pid \
	--exec /usr/sbin/rbldnsd -- \
	-r /var/db/rbldnsd \
	-p /run/rbldnsd.pid \
	${LISTEN[@]/#/-b} \
	${OPTIONS} \
	"${ZONES[@]}"

    eend $?
}

stop() {
    ebegin "Stopping rbldnsd"
    start-stop-daemon --stop --quiet --pidfile /run/rbldnsd.pid \
	--exec /usr/sbin/rbldnsd
    eend $?
}
